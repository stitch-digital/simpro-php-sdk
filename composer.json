{
    "name": "stitch-digital/simpro-php-sdk",
    "description": "An SDK to easily work with the Simpro API",
    "keywords": [
        "simpro",
        "api",
        "sdk",
        "saloon"
    ],
    "homepage": "https://github.com/stitch-digital/simpro-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "John Trickett",
            "email": "john@stitch.digital",
            "homepage": "https://stitch.digital",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/collections": "^11.0 || ^12.0",
        "saloonphp/cache-plugin": "^3.0",
        "saloonphp/pagination-plugin": "^2.2",
        "saloonphp/rate-limit-plugin": "^2.0",
        "saloonphp/saloon": "^3.14"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "league/flysystem": "^3.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.35|^3.8.2",
        "phpstan/phpstan": "^2.1",
        "vlucas/phpdotenv": "^5.6.2"
    },
    "autoload": {
        "psr-4": {
            "Simpro\\PhpSdk\\Simpro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simpro\\PhpSdk\\Simpro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest -p",
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "review": [
            "@format",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        }
    }
}
